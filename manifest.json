{
  "manifest_version": 2,

  "name": "Pulse",
  "description": "An elegant extension to spice things up.",
  "version": "1.2",

  "chrome_url_overrides": {
    "newtab": "html/pulse.html"
  },

  "browser_action": {
    "default_icon": "img/popup_icon.png",
    "default_popup": "popup.html",
    "default_title": "Pulse Settings"
  },

  "permissions": [
    "activeTab",
    "storage",
    "bookmarks",
    "chrome://favicon/"
  ]
}
